<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EanrrangoS2_Tarea2.Inicio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="INICIO" FontSize="25" HorizontalTextAlignment="Center"/>
            <Image Source="uisrael.png" WidthRequest="100" HeightRequest="100"/>
            

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <BoxView Grid.Row="0" Grid.Column="0"  Color="CadetBlue" />
                <Label Text="Usuario" FontSize="20"  HorizontalTextAlignment="Center" Grid.Row="0"  Grid.Column="0"/>
                <BoxView Grid.Row="0" Grid.Column="1" Color="Gray" />
                <Entry x:Name="txtUsuario"  Placeholder="Ingrese el Usuario"  Grid.Row="0"  Grid.Column="1"></Entry>

                <BoxView Grid.Row="1" Grid.Column="0"  Color="CadetBlue" />
                <Label Text="Clave" FontSize="20" HorizontalTextAlignment="Center" Grid.Row="1"  Grid.Column="0"/>
                <BoxView Grid.Row="1" Grid.Column="1" Color="Gray" />
                <Entry x:Name="txtPassword"  Placeholder="Contraseña" IsPassword="True" Grid.Row="1"  Grid.Column="1"></Entry>
            </Grid>

            <Button x:Name="btnAbrirNotas" Text="ABRIR VENTANA NOTAS " Clicked="btnAbrirNotas_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>